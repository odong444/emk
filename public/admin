    <!-- Firebase SDK -->
    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
        import { getStorage, ref, listAll, getDownloadURL, getMetadata } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-storage.js';

        // Firebase ì„¤ì •
        const firebaseConfig = {
            apiKey: "AIzaSyBCt3ArxXTOp8-S-j91yF-hdxGh2zxryLw",
            authDomain: "upload-emk.firebaseapp.com",
            projectId: "upload-emk",
            storageBucket: "upload-emk.firebasestorage.app",
            messagingSenderId: "648692236374",
            appId: "1:648692236374:web:805dea9ca6549579a97bf7",
            measurementId: "G-E71YJHJGXD"
        };

        // ì „ì—­ ë³€ìˆ˜
        let app, storage;
        let allData = [];
        let filteredData = [];
        let currentFilter = 'all';

        // Firebase ì´ˆê¸°í™”
        async function initializeFirebase() {
            try {
                app = initializeApp(firebaseConfig);
                storage = getStorage(app);
                
                updateConnectionStatus('connected', 'âœ… Firebase ì—°ê²° ì„±ê³µ!');
                await loadAllData();
                
            } catch (error) {
                console.error('Firebase ì´ˆê¸°í™” ì‹¤íŒ¨:', error);
                updateConnectionStatus('error', 'âŒ Firebase ì—°ê²° ì‹¤íŒ¨');
            }
        }

        // ì—°ê²° ìƒíƒœ ì—…ë°ì´íŠ¸
        function updateConnectionStatus(type, message) {
            const statusDiv = document.getElementById('connectionStatus');
            statusDiv.className = `connection-status ${type}`;
            statusDiv.textContent = message;
        }

        // ëª¨ë“  ë°ì´í„° ë¡œë“œ
        async function loadAllData() {
            try {
                const rootRef = ref(storage, 'product-photos');
                const rootList = await listAll(rootRef);
                
                console.log('ğŸ“ ë£¨íŠ¸ í´ë” ìŠ¤ìº” ì¤‘...');
                const productData = {};
                let totalFiles = 0;
                let totalSize = 0;
                const submitters = new Set();
                let totalConcepts = 0;

                // ì œí’ˆë³„ í´ë” ìŠ¤ìº”
                for (const productRef of rootList.prefixes) {
                    const productName = productRef.name;
                    console.log(`ğŸ“¦ ${productName} í´ë” ìŠ¤ìº” ì¤‘...`);
                    
                    const productList = await listAll(productRef);
                    productData[productName] = { concepts: [], totalFiles: 0, totalSize: 0 };

                    // ì»¨ì…‰ë³„ í´ë” ìŠ¤ìº”
                    for (const conceptRef of productList.prefixes) {
                        const conceptName = conceptRef.name;
                        const submitterName = conceptName.split('_')[0];
                        submitters.add(submitterName);
                        totalConcepts++;
                        
                        console.log(`ğŸ¨ ${conceptName} ìŠ¤ìº” ì¤‘...`);
                        
                        const conceptList = await listAll(conceptRef);
                        const files = [];
                        let conceptSize = 0;

                        // íŒŒì¼ë³„ ì •ë³´ ìˆ˜ì§‘
                        for (const fileRef of conceptList.items) {
                            try {
                                const metadata = await getMetadata(fileRef);
                                const downloadURL = await getDownloadURL(fileRef);
                                
                                files.push({
                                    name: fileRef.name,
                                    fullPath: fileRef.fullPath,
                                    downloadURL: downloadURL,
                                    size: metadata.size,
                                    timeCreated: metadata.timeCreated,
                                    type: metadata.contentType
                                });
                                
                                conceptSize += metadata.size;
                                totalFiles++;
                                totalSize += metadata.size;
                                
                            } catch (error) {
                                console.warn(`âš ï¸ íŒŒì¼ ë©”íƒ€ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨: ${fileRef.fullPath}`);
                            }
                        }

                        productData[productName].concepts.push({
                            name: conceptName,
                            submitter: submitterName,
                            files: files,
                            fileCount: files.length,
                            totalSize: conceptSize,
                            lastModified: files.length > 0 ? Math.max(...files.map(f => new Date(f.timeCreated).getTime())) : 0
                        });

                        productData[productName].totalFiles += files.length;
                        productData[productName].totalSize += conceptSize;
                    }

                    // ì»¨ì…‰ì„ ìµœì‹ ìˆœìœ¼ë¡œ ì •ë ¬
                    productData[productName].concepts.sort((a, b) => b.lastModified - a.lastModified);
                }

                // ì „ì—­ ë°ì´í„° ì €ì¥
                allData = productData;
                filteredData = productData;

                // í†µê³„ ì—…ë°ì´íŠ¸
                updateStats({
                    totalFiles,
                    totalSubmitters: submitters.size,
                    totalConcepts,
                    totalSize
                });

                // UI ì—…ë°ì´íŠ¸
                renderProductGrid();
                
                console.log('âœ… ëª¨ë“  ë°ì´í„° ë¡œë“œ ì™„ë£Œ');
                document.getElementById('loadingIndicator').style.display = 'none';
                document.getElementById('productGrid').style.display = 'grid';
                
            } catch (error) {
                console.error('âŒ ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨:', error);
                updateConnectionStatus('error', 'âŒ ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨');
            }
        }

        // í†µê³„ ì—…ë°ì´íŠ¸
        function updateStats(stats) {
            document.getElementById('totalFiles').textContent = stats.totalFiles.toLocaleString();
            document.getElementById('totalSubmitters').textContent = stats.totalSubmitters.toLocaleString();
            document.getElementById('totalConcepts').textContent = stats.totalConcepts.toLocaleString();
            document.getElementById('totalSize').textContent = formatFileSize(stats.totalSize);
        }

        // ì œí’ˆ ê·¸ë¦¬ë“œ ë Œë”ë§
        function renderProductGrid() {
            const grid = document.getElementById('productGrid');
            grid.innerHTML = '';

            const productIcons = {
                'ë©€í‹°ì¿ ì»¤': 'ğŸ²',
                'ì˜¤í† ìŠ¬ë¼ì´ì„œ': 'ğŸ”ª',
                'ë“œë¦½ì»¤í”¼ë¨¸ì‹ ': 'â˜•'
            };

            Object.entries(filteredData).forEach(([productName, productInfo]) => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                
                const conceptsHtml = productInfo.concepts.map(concept => `
                    <div class="concept-item">
                        <div class="concept-header">
                            <div class="concept-info">
                                <div class="concept-name">${concept.name}</div>
                                <div class="concept-meta">
                                    ğŸ“¸ ${concept.fileCount}ê°œ íŒŒì¼ Â· ğŸ“¦ ${formatFileSize(concept.totalSize)} Â· 
                                    ğŸ“… ${new Date(concept.lastModified).toLocaleDateString()}
                                </div>
                            </div>
                        </div>
                        <div class="concept-actions">
                            <button class="action-btn download-btn" onclick="downloadConcept('${productName}', '${concept.name}')">
                                ğŸ’¾ ë‹¤ìš´ë¡œë“œ (${concept.fileCount}ê°œ)
                            </button>
                            <button class="action-btn preview-btn" onclick="previewConcept('${productName}', '${concept.name}')">
                                ğŸ‘ï¸ ë¯¸ë¦¬ë³´ê¸°
                            </button>
                        </div>
                    </div>
                `).join('');

                productCard.innerHTML = `
                    <div class="product-header">
                        <div class="product-title">
                            <span class="product-icon">${productIcons[productName] || 'ğŸ“¦'}</span>
                            ${productName}
                        </div>
                        <button class="download-all-btn" onclick="downloadProduct('${productName}')">
                            ğŸ“¥ ì „ì²´ ë‹¤ìš´ë¡œë“œ
                        </button>
                    </div>
                    <div class="concept-meta" style="margin-bottom: 20px; color: #666;">
                        ğŸ’¼ ${productInfo.concepts.length}ê°œ ì»¨ì…‰ Â· ğŸ“¸ ${productInfo.totalFiles}ê°œ íŒŒì¼ Â· ğŸ“¦ ${formatFileSize(productInfo.totalSize)}
                    </div>
                    <div class="concepts-list">
                        ${conceptsHtml}
                    </div>
                `;

                grid.appendChild(productCard);
            });
        }

        // ì œí’ˆë³„ í•„í„°ë§
        window.filterByProduct = function(product) {
            currentFilter = product;
            
            // í•„í„° ë²„íŠ¼ í™œì„±í™”
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            // ë°ì´í„° í•„í„°ë§
            if (product === 'all') {
                filteredData = allData;
            } else {
                filteredData = {};
                if (allData[product]) {
                    filteredData[product] = allData[product];
                }
            }

            renderProductGrid();
        };

        // ê²€ìƒ‰ ê¸°ëŠ¥
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            
            if (searchTerm === '') {
                filterByProduct(currentFilter);
                return;
            }

            filteredData = {};
            Object.entries(allData).forEach(([productName, productInfo]) => {
                const filteredConcepts = productInfo.concepts.filter(concept => 
                    concept.submitter.toLowerCase().includes(searchTerm) ||
                    concept.name.toLowerCase().includes(searchTerm) ||
                    productName.toLowerCase().includes(searchTerm)
                );

                if (filteredConcepts.length > 0) {
                    filteredData[productName] = {
                        ...productInfo,
                        concepts: filteredConcepts
                    };
                }
            });

            renderProductGrid();
        });

        // ì»¨ì…‰ ë‹¤ìš´ë¡œë“œ
        window.downloadConcept = async function(productName, conceptName) {
            const concept = allData[productName].concepts.find(c => c.name === conceptName);
            if (!concept) return;

            console.log(`ğŸ“¥ ${conceptName} ë‹¤ìš´ë¡œë“œ ì‹œì‘...`);
            
            // JSZip ë¼ì´ë¸ŒëŸ¬ë¦¬ê°€ í•„ìš”í•˜ì§€ë§Œ, ê°„ë‹¨í•˜ê²Œ ê°œë³„ íŒŒì¼ ë‹¤ìš´ë¡œë“œë¡œ êµ¬í˜„
            for (const file of concept.files) {
                try {
                    const link = document.createElement('a');
                    link.href = file.downloadURL;
                    link.download = file.name;
                    link.style.display = 'none';
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    
                    // ë‹¤ìš´ë¡œë“œ ê°„ê²© (ë¸Œë¼ìš°ì € ì œí•œ ë°©ì§€)
                    await new Promise(resolve => setTimeout(resolve, 500));
                    
                } catch (error) {
                    console.error(`íŒŒì¼ ë‹¤ìš´ë¡œë“œ ì‹¤íŒ¨: ${file.name}`, error);
                }
            }
            
            alert(`âœ… ${conceptName} ë‹¤ìš´ë¡œë“œ ì™„ë£Œ! (${concept.files.length}ê°œ íŒŒì¼)`);
        };

        // ì œí’ˆ ì „ì²´ ë‹¤ìš´ë¡œë“œ
        window.downloadProduct = async function(productName) {
            const productInfo = allData[productName];
            if (!productInfo) return;

            console.log(`ğŸ“¥ ${productName} ì „ì²´ ë‹¤ìš´ë¡œë“œ ì‹œì‘...`);
            
            let downloadCount = 0;
            for (const concept of productInfo.concepts) {
                for (const file of concept.files) {
                    try {
                        const link = document.createElement('a');
                        link.href = file.downloadURL;
                        link.download = `${concept.name}_${file.name}`;
                        link.style.display = 'none';
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);
                        
                        downloadCount++;
                        
                        // ë‹¤ìš´ë¡œë“œ ê°„ê²©
                        await new Promise(resolve => setTimeout(resolve, 300));
                        
                    } catch (error) {
                        console.error(`íŒŒì¼ ë‹¤ìš´ë¡œë“œ ì‹¤íŒ¨: ${file.name}`, error);
                    }
                }
            }
            
            alert(`âœ… ${productName} ì „ì²´ ë‹¤ìš´ë¡œë“œ ì™„ë£Œ! (${downloadCount}ê°œ íŒŒì¼)`);
        };

        // ë¯¸ë¦¬ë³´ê¸°
        window.previewConcept = function(productName, conceptName) {
            const concept = allData[productName].concepts.find(c => c.name === conceptName);
            if (!concept) return;

            const modal = document.getElementById('previewModal');
            const title = document.getElementById('previewTitle');
            const grid = document.getElementById('previewGrid');

            title.textContent = `${conceptName} (${concept.files.length}ê°œ íŒŒì¼)`;
            
            const imageFiles = concept.files.filter(file => 
                file.type && file.type.startsWith('image/')
            );

            grid.innerHTML = imageFiles.map(file => `
                <div class="preview-item">
                    <img src="${file.downloadURL}" alt="${file.name}" loading="lazy">
                    <div class="preview-item-info">
                        <div>${file.name}</div>
                        <div>${formatFileSize(file.size)}</div>
                    </div>
                </div>
            `).join('');

            modal.classList.add('active');
        };

        // ë¯¸ë¦¬ë³´ê¸° ë‹«ê¸°
        window.closePreview = function() {
            document.getElementById('previewModal').classList.remove('active');
        };

        // ìœ í‹¸ë¦¬í‹° í•¨ìˆ˜
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        initializeFirebase();

        console.log('ğŸ“ ê´€ë¦¬ì ëŒ€ì‹œë³´ë“œ ì¤€ë¹„ ì™„ë£Œ!');
    </script>
</body>
